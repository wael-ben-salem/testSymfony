
{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of Books</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Publication Date</th>
                <th>Category</th>
                <th>Ref</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.publicate_date  }}</td>
                    <td>{{ book.category }}</td>
                    <td>{{ book.ref }}</td>
                    <td>
                        <a href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
                        <a href="{{ path('book_delete', {'id': book.id}) }}" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_add') }}">Add New Book</a>
{% endblock %}