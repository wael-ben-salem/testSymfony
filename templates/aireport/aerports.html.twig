{# templates/aeroport/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Airports{% endblock %}

{% block body %}
    <h1>List of Airports</h1>

    <table>
        <thead>
            <tr>
                
                <th>Name</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            {% for aeroport in aeroports %}
                <tr>
                
                    <td>{{ aeroport.nom }}</td>
                    <td>{{ aeroport.ville }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No airports found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_aeroport_add') }}">Add Airport</a>
{% endblock %}
